html {
	box-sizing: border-box;
}

*,
*::before,
*::after {
	box-sizing: inherit;
}

html,
body {
	width: 100%;
	height: 100%;
}

@-moz-viewport {
	width: device-width;
}

@-ms-viewport {
	width: device-width;
}

@-webkit-viewport {
	width: device-width;
}

@viewport {
	width: device-width;
}

html {
	font-size: $font-size-root;
	-webkit-tap-highlight-color: rgba(0,0,0,0);
}

body {
	min-width: 320px;
}

[tabindex="-1"]:focus {
	outline: none !important;
}

img {
	vertical-align: middle;
}

[role="button"] {
	cursor: pointer;
}

a,
area,
button,
[role="button"],
input,
label,
select,
summary,
textarea {
	touch-action: manipulation;
}

label {
	display: inline-block;
}

button:focus {
	outline: 1px dotted;
	outline: 5px auto -webkit-focus-ring-color;
}

input,
button,
select,
textarea {
	margin: 0;
	line-height: inherit;
	border-radius: 0;
}

textarea {
	resize: vertical;
}

fieldset {
	min-width: 0;
	padding: 0;
	margin: 0;
	border: 0;
}

legend {
	display: block;
	width: 100%;
	padding: 0;
	font-size: 1.5rem;
	line-height: inherit;
	border: 0;
}

input[type="search"] {
	box-sizing: inherit;
	-webkit-appearance: none;
}

[hidden] {
	display: none !important;
}

small {
	font-size: $small-font-size;
}
